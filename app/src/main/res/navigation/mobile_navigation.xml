<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.tokyoguide.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_parks"
        android:name="com.example.tokyoguide.ui.dashboard.DashboardFragment"
        android:label="@string/title_parks"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_things_to_do"
        android:name="com.example.tokyoguide.ui.notifications.NotificationsFragment"
        android:label="@string/title_things_to_do"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_huge_stations"
        android:name="com.example.tokyoguide.HugeStationFragment"
        android:label="@string/title_huge_stations" />
